<apex:page standardController="Account" renderAs="pdf" showHeader="false">
    <html>
        <head>
            <style>
                body {
                    font-family: Arial, sans-serif;
                    font-size: 12pt;
                    margin: 25px;
                }
                h2 {
                    font-size: 16pt;
                    font-weight: bold;
                    border-bottom: 1px solid #000;
                    padding-bottom: 4px;
                    margin-bottom: 10px;
                }
                .section {
                    margin-bottom: 30px;
                }
                .label {
                    font-weight: bold;
                    margin-top: 8px;
                }
                .value {
                    margin-bottom: 10px;
                }
                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 10px;
                }
                th, td {
                    border: 1px solid #000;
                    padding: 6px;
                    text-align: left;
                }
                th {
                    background-color: #f0f0f0;
                    font-weight: bold;
                }
            </style>
        </head>

        <body>

            <!-- Account Details Section -->
            <div class="section">
                <h2>Account Details</h2>

                <div class="label">Account Name</div>
                <div class="value">{!Account.Name}</div>

                <div class="label">Phone</div>
                <div class="value">{!Account.Phone}</div>

                <div class="label">Industry</div>
                <div class="value">{!Account.Industry}</div>
            </div>

            <!-- Contact Details Section -->
            <div class="section">
                <h2>Contact Details</h2>

                <table>
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <apex:repeat value="{!Account.Contacts}" var="con">
                            <tr>
                                <td>{!con.FirstName}</td>
                                <td>{!con.LastName}</td>
                                <td>{!con.Email}</td>
                                <td>
                                    <apex:outputText value="{0,date,dd/MM/yyyy}">
                                        <apex:param value="{!con.CreatedDate}" />
                                    </apex:outputText>
                                </td>
                            </tr>
                        </apex:repeat>
                    </tbody>
                </table>
            </div>

        </body>
    </html>
</apex:page>